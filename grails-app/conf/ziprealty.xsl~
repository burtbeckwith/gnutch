<?xml version="1.0" encoding="utf-8"?>
<xsl:stylesheet
    xmlns:xsl="http://www.w3.org/1999/XSL/Transform"
    xmlns:fn="http://www.w3.org/2005/xpath-functions"
    xmlns:java="http://xml.apache.org/xalan/java"
    xmlns:html="http://www.w3.org/1999/xhtml"
	exclude-result-prefixes="fn java"
    version="1.0">

  <xsl:output
      method="xml"
      indent="yes"
      encoding="utf-8"/>

  <xsl:param name="contextURI"/>
  <xsl:template match="/">
    <doc>
      <field name="id"><xsl:value-of select="$contextURI"/></field>
      <xsl:apply-templates select="//html:div[@class='mainpgcontent mainsemifluid']"/>
    </doc>
  </xsl:template>
  
  
  <xsl:template match="html:div[@class='mainpgcontent mainsemifluid']">
  <xxx/>
      <field name="photo"><xsl:value-of select="//html:img[@id='photoOverlayImage']/@src" /></field>
      <xsl:for-each select="//html:table[@class='pricehistory']/html:tr[child::html:td]">
        <field name="price-history">
        	<xsl:value-of select="normalize-space(string(html:td[1]))"/>,<xsl:value-of select="normalize-space(string(html:td[2]))"/>,<xsl:value-of select="normalize-space(string(html:td[3]))"/>,<xsl:value-of select="normalize-space(string(html:td[4]))"/>
        </field>
      </xsl:for-each>
      <xsl:for-each select="//html:table[@class='mlsdetails']/html:tr[count(child::html:td) > 1]">
      	<xsl:if test="html:td[@class='featureLabel'][1]/html:nobr/text()">
      		<field name="{java:replaceAll(java:toLowerCase(java:replaceAll(java:replaceAll(string(html:td[@class='featureLabel'][1]/html:nobr/text()), '^\s*|\s*$|[^\w\d\s]|\#',''), ' ','-')), '#', 'N')}">
		  <xsl:value-of select="normalize-space(string(html:td[@class='featureData'][1]/text()))" />
		</field>
		<xsl:text>
		</xsl:text>
        </xsl:if>
      	<xsl:if test="html:td[@class='featureLabel'][2]/html:nobr/text()">
		<field name="{java:replaceAll(java:toLowerCase(java:replaceAll(java:replaceAll(string(html:td[@class='featureLabel'][2]/html:nobr/text()), '^\s*|\s*$|[^\w\d\s]|\#',''), ' ','-')), '#', 'N')}">
		  <xsl:value-of select="normalize-space(string(html:td[@class='featureData'][2]/text()))" />
		</field>
		<xsl:text>
		</xsl:text>
        </xsl:if>
      </xsl:for-each>
  </xsl:template>

</xsl:stylesheet>